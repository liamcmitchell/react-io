{
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"jest": true
	},
	"plugins": [
		"react",
		"jest"
	],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "16.0"
		}
	},
	"rules": {
		"semi": [2, "never"],
		"no-trailing-spaces": 1,
	}
}
